{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es6",
    "lib": ["es6", "dom", "es2019"],
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "example"]
}